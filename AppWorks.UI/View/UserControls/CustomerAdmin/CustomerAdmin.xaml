                                           Grid.Column="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Style="{themeEx:ThemeResource TextTitle3Style}"
                                           Text="Email" />
                                <TextBox Grid.Row="2"
                                         Grid.Column="2"
                                         Margin="5"
                                         IsReadOnly="{Binding IsReadOnlyText}"
