<UserControl x:Class="AppWorks.UI.View.UserControls.CustomerAdmin.CustomerAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Uc="clr-namespace:AppWorks.UI.View.UserControls.Location"
             xmlns:brushes="clr-namespace:AppWorks.UI.Controls.Themes;assembly=AppWorks.UI.Controls"
             xmlns:converter="clr-namespace:AppWorks.UI.Controls.Converters;assembly=AppWorks.UI.Controls"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:themeEx="clr-namespace:AppWorks.UI.Controls.Extensions;assembly=AppWorks.UI.Controls"
             d:DesignWidth="980"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converter:BooleanInversionConverter x:Key="boolInversionConverter" />
    </UserControl.Resources>

    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!--<TextBlock Grid.Row="1" Grid.Column="1" Text="Port Storage Vehicle Details" Style="{StaticResource TextTitleStyle}" />-->

        <!--  TOP SEARC FIELD PANEL START  -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="200*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="120*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="120*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="150*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource TextTitle3Style}"
                       Text="Customer Code" />

            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource TextTitle3Style}"
                       Text="Customer Name" />

            <TextBlock Grid.Row="0"
                       Grid.Column="4"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource TextTitle3Style}"
                       Text="Short Name" />

            <TextBlock Grid.Row="0"
                       Grid.Column="6"
                       VerticalAlignment="Center"
                       Style="{StaticResource TextTitle3Style}"
                       Text="DBA Name" />

            <TextBlock Grid.Row="0"
                       Grid.Column="8"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource TextTitle3Style}"
                       Text="Customer Type" />

            <TextBlock Grid.Row="0"
                       Grid.Column="10"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Text="Parent Company"
                       Visibility="Hidden" />
            <TextBox Grid.Row="1"
                     Margin="0 5 5 5"
                     IsEnabled="{Binding IsReadOnlyCustomerCode,
                                         Mode=TwoWay,
                                         UpdateSourceTrigger=PropertyChanged}"
                     Text="{Binding CustomerNumber,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Grid.Row="1"
                     Grid.Column="2"
                     Margin="0 5 5 5"
                     IsEnabled="{Binding IsReadOnlyCustomer,
                                         Mode=TwoWay,
                                         UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="100"
                     Text="{Binding CustomerName,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Grid.Row="1"
                     Grid.Column="4"
                     Margin="0 5 5 5"
                     IsEnabled="{Binding IsReadOnlyCustomer,
                                         Mode=TwoWay,
                                         UpdateSourceTrigger=PropertyChanged}"
                     Text="{Binding ShortName,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Grid.Row="1"
                     Grid.Column="6"
                     Margin="0 5 5 5"
                     IsEnabled="{Binding IsReadOnlyCustomer,
                                         Mode=TwoWay,
                                         UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="17"
                     Text="{Binding DBAName,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />

            <telerik:RadComboBox Grid.Row="1"
                                 Grid.Column="8"
                                 Height="30"
                                 VerticalContentAlignment="Center"
                                 DisplayMemberPath="Description"
                                 IsEnabled="{Binding IsReadOnlyCustomer,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                                 ItemsSource="{Binding ListCustomerType,
                                                       Mode=TwoWay,
                                                       UpdateSourceTrigger=PropertyChanged}"
                                 SelectedValue="{Binding CustomerType}"
                                 SelectedValuePath="Code1" />
            <ComboBox Grid.Row="1"
                      Grid.Column="10"
                      Height="30"
                      VerticalContentAlignment="Center"
                      DisplayMemberPath="Description"
                      IsReadOnly="{Binding IsReadOnlyCustomer,
                                           Mode=TwoWay,
                                           UpdateSourceTrigger=PropertyChanged}"
                      IsSynchronizedWithCurrentItem="True"
                      ItemsSource="{Binding LstParentCompanyType,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                      SelectedValue="{Binding CustomerOf}"
                      SelectedValuePath="Code1"
                      Visibility="Hidden" />

        </Grid>
        <!--  /TOP SEARC FIELD PANEL END  -->

        <Rectangle Grid.Row="1"
                   Height="1"
                   Margin="-5 7 -10 0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Center"
                   Fill="{DynamicResource {x:Static brushes:BrushSet.BorderBrushKey}}" />

        <telerik:RadTabControl x:Name="tabControl"
                               Grid.Row="2"
                               Grid.Column="1"
                               Grid.ColumnSpan="2"
                               HorizontalAlignment="Stretch"
                               SelectedIndex="0">

            <!--  ======USER DETAIL TAB START=======  -->
