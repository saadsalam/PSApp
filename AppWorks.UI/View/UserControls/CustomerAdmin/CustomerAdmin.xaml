            <telerik:RadTabItem Header="Port Storage Rates" >
                <DockPanel Margin="5 0">
                    <DockPanel DockPanel.Dock="Top" >
                        <TextBlock Margin="0 7 7 7"
                                   Padding="5"
                                   Style="{themeEx:ThemeResource TextTitle3Style}"
                                   Text="Effected Date Beetween" />
                        <telerik:RadDatePicker Margin="5" Width="180"
                                               Culture="English (United States)"
                                               Padding="5" 
                                               InputMode="DateTimePicker"
                                                           IsEnabled="{Binding IsRateDateEditable,
                                                                               Mode=TwoWay,
                                                                               UpdateSourceTrigger=PropertyChanged}"
                                                           SelectedValue="{Binding RateStartDate,
                                                                                   Mode=TwoWay}" 
                                               
                                               />
                        <telerik:RadDatePicker Margin="5"
                                               Culture="English (United States)"
                                               Width="180"
                                               InputMode="DateTimePicker"
                                                           IsEnabled="{Binding IsRateDateEditable,
                                                                               Mode=TwoWay,
                                                                               UpdateSourceTrigger=PropertyChanged}"
                                                           SelectedValue="{Binding RateEndDate,
                                                                                   Mode=TwoWay}" 
                                               Padding="5" />
                        <Button Width="80"
                            Margin="0 7"
                            HorizontalAlignment="Right"
                            Content="Reload List"
                            DockPanel.Dock="Top"
                            Padding="5"
                            Command="{Binding Path=BtnReloadRate_Click}" />
                    </DockPanel>
                    <WrapPanel DockPanel.Dock="Bottom">
                    <Button Width="80"
                            Margin="2 7"
                            HorizontalAlignment="Left"
                            Content="Add Rate"
                            IsEnabled="{Binding IsAddRateEnabled,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                            Command="{Binding Path=BtnAddRate_Click}"
                            Padding="5" />
                       
                        <Button Width="80"
                            Margin="2 7"
                            HorizontalAlignment="Left"
                            Content="Modify/View Selected"
                            IsEnabled="{Binding EnableModifyDeleteRate , Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}"
                            Command="{Binding Path=BtnModifyRate_Click}"
                            Padding="5" />
                    <Button Width="80"
                            Margin="2 7"
                            HorizontalAlignment="Left"
                            Content="Delete Rate"
                            IsEnabled="{Binding EnableModifyDeleteRate, Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}"
                            Command="{Binding Path=BtnDeleteRate_Click}"
                            Padding="5" />
                    </WrapPanel>
                    <telerik:RadGridView Name="grdPortStorageRatesList"
                        Margin="0 10 0 10"
                                         AutoGenerateColumns="False"
                                         IsReadOnly="True"
                                         SelectedItem="{Binding SelectedRateItem}"
                                         ItemsSource="{Binding PortStorageRates,
                                         Mode=TwoWay,
                                         UpdateSourceTrigger=PropertyChanged}"
                                         ShowGroupPanel="False"
                                         >
                        <!--ScrollMode="RealTime"
                                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"-->
                        <telerik:RadGridView.Columns>
                            <!--<telerik:GridViewSelectColumn />-->
                            <telerik:GridViewDataColumn Width="*" 
                                                        Header="Entry Fee" 
                                                        DataMemberBinding="{Binding EntryFee}">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*" 
                                                        Header="Per Diem"
                                                        DataMemberBinding="{Binding PerDiem}">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="1.2*" 
                                                        Header="Per Diem Grace Days"
                                                        DataMemberBinding="{Binding PerDiemGraceDays}">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*" 
                                                        Header="Start Date"
                                                        DataMemberBinding="{Binding StartDate, StringFormat={}{0:d}}">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*" 
                                                        Header="End Date"
                                                        DataMemberBinding="{Binding EndDate, StringFormat={}{0:d}}">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                                
                            </telerik:GridViewDataColumn>
                            
                            <!--<telerik:GridViewColumn Width="Auto" Header="Action">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="5"
                                                       Style="{themeEx:ThemeResource IconText}"
                                                       Text="" />
                                            <TextBlock Margin="0 7"
                                                       Style="{themeEx:ThemeResource IconText}"
                                                       Text="" />
                                        </StackPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>-->
                        </telerik:RadGridView.Columns>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding FillRateAdmin}" CommandParameter="{Binding Path=SelectedItem, ElementName=storageRateList}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </telerik:RadGridView>

                </DockPanel>
            </telerik:RadTabItem>


            <telerik:RadTabItem Header="Location">
                <Uc:Location x:Name="CustomerLocation" Margin="20 0" />
            </telerik:RadTabItem>
            <telerik:RadTabItem Header="Notes" Visibility="Collapsed">
                <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Visible">
                    <Grid Margin="5 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Height="30"
                                       Margin="0,0,5,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Style="{themeEx:ThemeResource TextTitle3Style}"
                                       Text="Entered From" />
                            <TextBox Name="txtStartDate"
                                     Grid.Row="0"
                                     Grid.Column="2"
                                     Height="30"
                                     Text="{Binding StartDate,
                                                    Mode=TwoWay}" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="3"
                                       Height="30"
                                       Margin="0,0,5,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Style="{themeEx:ThemeResource TextTitle3Style}"
                                       Text="To" />
                            <TextBox Name="txtEndDate"
                                     Grid.Row="0"
                                     Grid.Column="4"
                                     Height="30"
                                     Text="{Binding EndDate,
                                                    Mode=TwoWay}" />
                            <Button Grid.Row="0"
                                    Grid.Column="6"
                                    Width="100"
                                    HorizontalAlignment="Left"
                                    Command="{Binding BtnReload_Click}"
                                    Content="RELOAD" />
                            <telerik:RadGridView Name="grdUserList"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 Grid.ColumnSpan="6"
                                                 Width="auto"
                                                 Height="250"
                                                 AutoGenerateColumns="False"
                                                 DataContext="{Binding}"
                                                 ItemsSource="{Binding ListNotesList,
                                                                       Mode=TwoWay,
                                                                       UpdateSourceTrigger=PropertyChanged}">
                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewDataColumn Width="595"
                                                                DataMemberBinding="{Binding Note,
                                                                                            Mode=TwoWay}"
                                                                Header="Note" />
                                    <telerik:GridViewDataColumn Width="auto"
                                                                DataMemberBinding="{Binding CreationDate,
                                                                                            Mode=TwoWay}"
                                                                Header="Added Date" />
                                    <telerik:GridViewDataColumn Width="auto"
                                                                DataMemberBinding="{Binding CreatedBy,
                                                                                            Mode=TwoWay}"
                                                                Header="Added By" />
                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>
                            <StackPanel Grid.Row="2"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="5"
                                        Orientation="Horizontal">
                                <Button Width="100"
                                        Margin="5"
                                        HorizontalAlignment="Left"
                                        Command="{Binding BtnAddNoteClick}"
                                        Content="ADD" />
                                <Button Width="100"
                                        Margin="5"
                                        HorizontalAlignment="Left"
                                        Command="{Binding BtnSubmit_Click}"
                                        Content="MODIFY" />
                                <Button Width="100"
                                        Margin="5"
                                        HorizontalAlignment="Left"
                                        Command="{Binding BtnSubmit_Click}"
                                        Content="DELETE" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </telerik:RadTabItem>


        </telerik:RadTabControl>
        <!--  =====/Tab Content End====  -->

        <DockPanel Grid.Row="3" Margin="0 0 0 -2">
            <StackPanel Margin="0 10 0 0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                <Button Width="100"
                        Margin="0 7 7 7"
                        HorizontalAlignment="Left"
                        Command="{Binding BtnNew_Click}"
                        Content="NEW"
                        IsEnabled="{Binding EnabledNew,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                        Padding="5" />
                <Button Width="100"
                        Margin="7"
                        HorizontalAlignment="Left"
                        Command="{Binding BtnModify_Click}"
                        Content="MODIFY"
                        IsEnabled="{Binding EnabledModify,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                        Padding="5" />
                <Button Width="100"
                        Margin="7"
                        HorizontalAlignment="Left"
                        Command="{Binding BtnFind_Click}"
                        IsEnabled="{Binding EnabledFind,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                        Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,7,0"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource IconText}"
                                   Text="{StaticResource SearchTextIcon}" />
                        <TextBlock Text="FIND" />
                    </StackPanel>
                </Button>
                <Button Width="100"
                        Margin="7"
                        HorizontalAlignment="Left"
                        Command="{Binding BtnOK_Click}"
                        Content="{Binding Text,
                                          Mode=TwoWay,
                                          UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding EnabledSaveUpdate,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                        Padding="5" />
                <Button Width="100"
                        Margin="7"
                        HorizontalAlignment="Left"
                        Command="{Binding BtnCancel_Click}"
                        Content="CANCEL"
                        IsEnabled="{Binding EnabledCancel,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                        Padding="5" />
            </StackPanel>
        </DockPanel>

        <!--  =====/Main Content END====  -->
    </Grid>
</UserControl>
