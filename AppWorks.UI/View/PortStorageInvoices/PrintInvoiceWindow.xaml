                </StackPanel>
            </Grid>-->
        </GroupBox>

        <GroupBox Grid.Row="2"
                  Grid.Column="1"
                  VerticalAlignment="Top"
                  Header="Select Copies To Print">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition />
                    <RowDefinition Height="5" />
                    <RowDefinition />
                    <RowDefinition Height="5" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <RadioButton Grid.Row="1"
                             Grid.Column="0"
                             Content="Both Copies"
                              IsChecked="{Binding BothCopiesInd,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}" />
                <RadioButton Grid.Row="3"
                             Grid.Column="0"
                             Content="Customer Copy"
                              IsChecked="{Binding CustomerCopyInd,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"/>
                <RadioButton Grid.Row="5"
                             Grid.Column="0"
                             Content="Diversified Copy"
                              IsChecked="{Binding DiversifiedCopyInd,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="4"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
            <Button Width="110"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=BtnPrintInvoiceContinue_Click}"
                    Content="Continue"
                    Padding="5" />
            <Button Width="110"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=BtnCancel_Click}"
                    Content="Cancel"
                    Padding="5" />
        </StackPanel>
    </Grid>

</Window>
