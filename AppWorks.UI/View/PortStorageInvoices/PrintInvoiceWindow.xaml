<Window x:Class="AppWorks.UI.View.PortStorageInvoices.PrintInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="Print Invoices"
        Width="400"
        ResizeMode="NoResize"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="0,10,0,0"
                  Header="Select Invoice To Print">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <RadioButton Grid.Row="0"
                             Margin="5"
                             Command="{Binding RadioButton_Checked}"
                             Content="Previously Unprinted"
                             GroupName="a"
                             IsChecked="{Binding UnPrint,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}" />
                <RadioButton Grid.Row="1"
                             Margin="5"
                             Command="{Binding RadioButton_Checked}"
                             Content="Reprint"
                             GroupName="a"
                             IsChecked="{Binding ReprintInd,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}" />

                <Grid Grid.Row="2" Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <RadioButton Margin="5"
                                 Command="{Binding RadioButtonBy_Checked}"
                                 Content="By Date"
                                 GroupName="b"
                                 IsChecked="{Binding ByDate,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsEnabledByDate,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}" />
                    <Grid Grid.Row="1" Margin="20,7,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <RadioButton Grid.Column="0"
                                         Margin="5"
                                         Content="Print Date"
                                         GroupName="c"
                                         IsChecked="{Binding PrintedDate,
                                                             Mode=TwoWay,
                                                             UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEnabledPrintedDate,
                                                             Mode=TwoWay,
                                                             UpdateSourceTrigger=PropertyChanged}" />

                            <RadioButton Grid.Row="0"
                                         Grid.Column="1"
                                         Margin="5"
                                         Content="Invoice Date"
                                         GroupName="c"
                                         IsChecked="{Binding InvoiceDate,
                                                             Mode=TwoWay,
                                                             UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEnabledInvoiceDate,
                                                             Mode=TwoWay,
                                                             UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>


                        <Grid Grid.Row="1" Margin="10,7,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Margin="7,0"
                                       Text="From" />

                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Margin="7,0"
                                       Text="To" />

                            <telerik:RadDatePicker Name="txtStartDate"
                                                   Grid.Row="2"
                                                   Grid.Column="0"
                                                   Margin="5"
                                                   IsEnabled="{Binding IsEnabledFromDate,
                                                                       Mode=TwoWay,
                                                                       UpdateSourceTrigger=PropertyChanged}"
                                                   SelectedValue="{Binding InvoiceDateFrom,
                                                                           Mode=TwoWay,
                                                                           UpdateSourceTrigger=PropertyChanged}" />

                            <telerik:RadDatePicker Name="txtEndDate"
                                                   Grid.Row="2"
                                                   Grid.Column="1"
                                                   Margin="5"
                                                   IsEnabled="{Binding IsEnabledToDate,
                                                                       Mode=TwoWay,
                                                                       UpdateSourceTrigger=PropertyChanged}"
                                                   SelectedValue="{Binding InvoiceDateTo,
                                                                           Mode=TwoWay}" />
                        </Grid>
                    </Grid>

                    <RadioButton Grid.Row="2"
                                 Margin="5"
                                 Command="{Binding RadioButtonBy_Checked}"
                                 Content="By Number"
                                 GroupName="b"
                                 IsChecked="{Binding ByNumber,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsEnabledByNumber,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}" />

                    <Grid Grid.Row="3" Margin="30,7,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Margin="7,0"
                                   Text="From" />

                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Margin="7,0"
                                   Text="To" />

                        <TextBox Grid.Row="1"
                                 Grid.Column="0"
                                 Margin="5"
                                 IsEnabled="{Binding IsEnabledFromNumber,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                                 Text="{Binding InvoiceNumberFrom,
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}" />

                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Margin="5"
                                 IsEnabled="{Binding IsEnabledToNumber,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                                 Text="{Binding InvoiceNumberTo,
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Grid>
            </Grid>

