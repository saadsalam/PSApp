                                        Mode=TwoWay}"
                         TextAlignment="Right" />
            </Grid>-->



            <TextBlock Grid.Row="1"
                       Grid.Column="6"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Total Invoice" />
            <TextBox Grid.Row="1"
                     Grid.Column="7"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding TotalInvoice,
                                    StringFormat={}{0:0.00},
                                    Mode=TwoWay}"
                     TextAlignment="Right" />

            <!--<TextBlock Grid.Row="4"
                       Grid.Column="0"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Driver" />
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding Driver}"
                     TextAlignment="Right" />-->

            <!--<TextBlock Grid.Row="4"
                       Grid.Column="3"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Fuel Surcharge" />
            <Grid Grid.Row="4"
                  Grid.Column="4"
                  IsEnabled="False">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <CheckBox Name="ChkSC"
                          Grid.Row="0"
                          Grid.Column="0"
                          Margin="7 4 2 4"
