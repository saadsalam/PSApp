<UserControl x:Class="AppWorks.UI.View.Billing.AddEditInvoiceRecords"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:brushes="clr-namespace:AppWorks.UI.Controls.Themes;assembly=AppWorks.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:AppWorks.UI.ViewModel.Billing"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:themeEx="clr-namespace:AppWorks.UI.Controls.Extensions;assembly=AppWorks.UI.Controls"
             d:DesignHeight="600"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <!--<UserControl.Resources>
        <local:BillingFindVM x:Key="BillingFindVM"></local:BillingFindVM>
    </UserControl.Resources>-->


    <Grid Margin="0 0 0 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" IsEnabled="{Binding IsEditable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width=".3*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width=".3*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Customer Name" />
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding CustomerName,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="0"
                       Grid.Column="3"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Customer Number" />
            <TextBox Grid.Row="0"
                     Grid.Column="4"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding CustomerNumber,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="3"
                       Grid.Column="3"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Invoice Number" />
            <TextBox Grid.Row="3"
                     Grid.Column="4"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding InvoiceNumber,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Customer Address" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding CustomerAddress,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="1"
                       Grid.Column="3"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Status" />
            <TextBox Grid.Row="1"
                     Grid.Column="4"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding Status,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />

            
            <TextBlock Grid.Row="4"
                       Grid.Column="3"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Cross Ref. Number" />
            <TextBox Grid.Row="4"
                     Grid.Column="4"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding CrossRefNumber,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Invoice Type" />
            <telerik:RadComboBox Grid.Row="2"
                                 Grid.Column="1"
                                 Margin="7"
                                 DisplayMemberPath="Description"
                                 IsEnabled="{Binding EnableInvoiceType,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                                 IsSynchronizedWithCurrentItem="True"
                                 ItemsSource="{Binding LstInvoiceType,
                                                       Mode=TwoWay,
                                                       UpdateSourceTrigger=PropertyChanged}"
                                 SelectedValue="{Binding InvoiceType}"
                                 SelectedValuePath="Code1" />

            <TextBlock Grid.Row="2"
                       Grid.Column="3"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Storage/Handling" />
            <TextBox Grid.Row="2"
                     Grid.Column="4"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding StorageHandling,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged,
                                    StringFormat={}{0:0.00}}"
                     TextAlignment="Right"
                     Validation.ErrorTemplate="{x:Null}" />

            <TextBlock Grid.Row="0"
                       Grid.Column="6"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Invoice Date" />
            <telerik:RadDatePicker Grid.Row="0"
                                   Grid.Column="7"
                                   Margin="7"
                                   Culture="English (United States)"
                                   SelectedDate="{Binding InvoiceDate,
                                                          Mode=TwoWay}"
                                   Validation.ErrorTemplate="{x:Null}" />

            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Payment Method" />
            <telerik:RadComboBox Grid.Row="3"
                                 Grid.Column="1"
                                 Margin="7"
                                 DisplayMemberPath="Description"
                                 IsEnabled="{Binding EnablePaymentMethod,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                                 IsSynchronizedWithCurrentItem="True"
                                 ItemsSource="{Binding LstPaymentMethod,
                                                       Mode=TwoWay,
                                                       UpdateSourceTrigger=PropertyChanged}"
                                 SelectedValue="{Binding PaymentMethod}"
                                 SelectedValuePath="Code1" />

            <!--<TextBlock Grid.Row="3"
                       Grid.Column="3"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Fuel S/C Rate" />
