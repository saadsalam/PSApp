                         Grid.Column="1"
                         Margin="7"
                         IsEnabled="{Binding ElementName=ChkSC,
                                             Path=IsChecked}"
                         Text="{Binding FuelSC,
                                        Mode=TwoWay,
                                        StringFormat={}{0:0.00}}"
                         TextAlignment="Right" />
            </Grid>-->



            <TextBlock Grid.Row="2"
                       Grid.Column="6"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Total Paid" />
            <TextBox Grid.Row="2"
                     Grid.Column="7"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding TotalPaid,
                                    Mode=TwoWay,
                                    StringFormat={}{0:0.00}}"
                     TextAlignment="Right" />

            <TextBlock Grid.Row="4"
                       Grid.Column="0"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Total Units" />
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding TotalUnits,
                                    Mode=TwoWay}"
                     TextAlignment="Right" />

            <!--<TextBlock Grid.Row="5"
                       Grid.Column="3"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Due To Brokers" />
            <TextBox Grid.Row="5"
                     Grid.Column="4"
                     Margin="7"
                     HorizontalAlignment="Stretch"
                     IsEnabled="False"
                     Text="{Binding DueToBrokers,
                                    Mode=TwoWay,
                                    StringFormat={}{0:0.00}}"
                     TextAlignment="Right" />-->

            <TextBlock Grid.Row="3"
                       Grid.Column="6"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Credits Issued" />
            <TextBox Grid.Row="3"
                     Grid.Column="7"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding CreditsIssued,
                                    Mode=TwoWay,
                                    StringFormat={}{0:0.00}}"
                     TextAlignment="Right" />

            <!--<TextBlock Grid.Row="6"
                       Grid.Column="0"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Transport Charges" />
            <TextBox Grid.Row="6"
                     Grid.Column="1"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding TransportCharges,
                                    Mode=TwoWay,
                                    StringFormat={}{0:0.00}}"
                     TextAlignment="Right" />-->

            <!--<TextBlock Grid.Row="6"
                       Grid.Column="3"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Due From Brokers" />
            <TextBox Grid.Row="6"
                     Grid.Column="4"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding DueFromBrokers,
                                    Mode=TwoWay,
                                    StringFormat={}{0:0.00}}"
                     TextAlignment="Right" />-->

            <TextBlock Grid.Row="4"
                       Grid.Column="6"
                       Margin="7 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{themeEx:ThemeResource TextTitle3Style}"
                       Text="Balance Due" />
            <TextBox Grid.Row="4"
                     Grid.Column="7"
                     Margin="7"
                     IsEnabled="False"
                     Text="{Binding BalanceDue,
                                    Mode=TwoWay,
                                    StringFormat={}{0:0.00}}"
                     TextAlignment="Right" />
        </Grid>

        <telerik:RadTabControl Grid.Row="1"
                               Margin="7"
                               SelectedIndex="0">
            <telerik:RadTabItem Header="Invoice Details">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <telerik:RadGridView Name="grdInvoiceDetails"
                                         AutoGenerateColumns="False"
                                         DataContext="{Binding}"
                                         EnableColumnVirtualization="True"
                                         IsEnabled="{Binding IsEditable,
                                                             Mode=TwoWay,
                                                             UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True"
                                         IsSynchronizedWithCurrentItem="True"
                                         ItemsSource="{Binding ListInvoiceDetails,
                                                               Mode=TwoWay,
                                                               UpdateSourceTrigger=PropertyChanged}"
                                         RowIndicatorVisibility="Collapsed"
                                         ScrollMode="RealTime"
                                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         SelectedItem="{Binding Path=SelectedUser}"
                                         SelectionMode="Extended"
                                         SelectionUnit="FullRow"
                                         ShowGroupPanel="False">
                        <telerik:RadGridView.Columns>

                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding PortStorageVehiclesID,
                                                                                    Mode=TwoWay}"
                                                        Header="PortStorageVehiclesID"
                                                        IsVisible="False">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding Vin,
                                                                                    Mode=TwoWay}"
                                                        Header="VIN">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*"
                                                        DataFormatString="MM/dd/yyyy"
                                                        DataMemberBinding="{Binding DateIn,
                                                                                    Mode=TwoWay}"
                                                        Header="Date In">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*"
                                                        DataFormatString="MM/dd/yyyy"
                                                        DataMemberBinding="{Binding DateOut,
                                                                                    Mode=TwoWay}"
                                                        Header="Date Out">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding Days,
                                                                                    Mode=TwoWay}"
                                                        Header="Days">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>

                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding PerDiemGraceDays,
                                                                                    Mode=TwoWay}"
                                                        Header="Grace Days">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding ChargeDays,
                                                                                    Mode=TwoWay}"
                                                        Header="Charge Days">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding EntryRate,
                                                                                    Mode=TwoWay}"
                                                        Header="Entry Rate">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding PerDiem,
                                                                                    Mode=TwoWay}"
                                                        Header="Per Diem">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding TotalCharge,
                                                                                    Mode=TwoWay}"
                                                        Header="Charge Rate">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                        </telerik:RadGridView.Columns>
                        <telerik:RadGridView.ItemContainerStyle>
                            <Style TargetType="telerik:GridViewRow">
                                <Style.Triggers>
                                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                        <Setter Property="IsSelected" Value="True" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </telerik:RadGridView.ItemContainerStyle>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding BtnDoubleClick_Click}" CommandParameter="{Binding}" />

                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </telerik:RadGridView>
                    <Button Grid.Row="1"
                            Margin="0 5 5 5"
                            HorizontalAlignment="Left"
                            Content="Select Load To Invoice"
                            Visibility="Collapsed" />
                </Grid>
            </telerik:RadTabItem>
            <telerik:RadTabItem Header="Notes And Other Info">
                <DockPanel Margin=" 7 0 7 7">
                    <GroupBox DockPanel.Dock="Bottom"
                              Header="Update History"
                              Style="{themeEx:ThemeResource GroupBoxLeftHeaderStyle}">
                        <Grid IsEnabled="{Binding IsEditable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="180" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Created Date:" />
                            <TextBox Grid.Row="0"
                                     Grid.Column="1"
                                     Margin="5"
                                     IsEnabled="False"
                                     Text="{Binding CreatedDate,
                                                    Mode=OneWay,
                                                    StringFormat={}{0:d},
                                                    UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Grid.Row="0"
                                       Grid.Column="3"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Updated Date:" />

                            <TextBox Grid.Row="0"
                                     Grid.Column="4"
                                     Margin="5"
                                     IsEnabled="False"
                                     Text="{Binding UpdatedDate,
                                                    Mode=OneWay,
                                                    StringFormat={}{0:d},
                                                    UpdateSourceTrigger=PropertyChanged}" />


                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Created By:" />

                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Margin="5"
                                     IsEnabled="False"
                                     Text="{Binding CreatedBy,
                                                    Mode=OneWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="3"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Updated By:" />

                            <TextBox Grid.Row="1"
                                     Grid.Column="4"
                                     Margin="5"
                                     IsEnabled="False"
                                     Text="{Binding UpdatedBy,
                                                    Mode=OneWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />

                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Comments" Style="{themeEx:ThemeResource GroupBoxLeftHeaderStyle}">
                        <TextBox VerticalContentAlignment="Top"
                                 AcceptsReturn="True"
                                 Text="{Binding Comments}" />
                    </GroupBox>
                </DockPanel>
            </telerik:RadTabItem>
            <telerik:RadTabItem Header="Invoice Line Items">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <telerik:RadGridView Name="grdInvoiceLineItems"
                                         Height="300"
                                         AutoGenerateColumns="False"
                                         IsEnabled="{Binding IsEditable,
                                                             Mode=TwoWay,
                                                             UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True"
                                         ItemsSource="{Binding ListInvoiceLineItems,
                                                               Mode=TwoWay,
                                                               UpdateSourceTrigger=PropertyChanged}"
                                         RowIndicatorVisibility="Collapsed"
                                         ShowGroupPanel="False">
                        <telerik:RadGridView.Columns>
                            <telerik:GridViewDataColumn Width="*"
                                                        DataFormatString="MM/dd/yyyy"
                                                        DataMemberBinding="{Binding InvoiceDate,
                                                                                    Mode=TwoWay}"
                                                        Header="Date" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding DebitAccountNumber,
                                                                                    Mode=TwoWay}"
                                                        Header="Debit" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding DebitProfitCenterNumber,
                                                                                    Mode=TwoWay}"
                                                        Header="DPC #" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding DebitCostCenterNumber,
                                                                                    Mode=TwoWay}"
                                                        Header="DCC #" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding CreditAccountNumber,
                                                                                    Mode=TwoWay}"
                                                        Header="Credit" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding CreditProfitCenterNumber,
                                                                                    Mode=TwoWay}"
                                                        Header="CPC #" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding CreditCostCenterNumber,
                                                                                    Mode=TwoWay}"
                                                        Header="CCC #" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding ARTransactionAmount,
                                                                                    Mode=TwoWay}"
                                                        Header="Amount" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding Description,
                                                                                    Mode=TwoWay}"
                                                        Header="Description" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataFormatString="MM/dd/yyyy"
                                                        DataMemberBinding="{Binding ExportedDate,
                                                                                    Mode=TwoWay}"
                                                        Header="Exported" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataFormatString="MM/dd/yyyy"
                                                        DataMemberBinding="{Binding CreationDate,
                                                                                    Mode=TwoWay}"
                                                        Header="Created" />
                        </telerik:RadGridView.Columns>
                    </telerik:RadGridView>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Width="180"
                                Margin="15 3 3 3"
                                Command="{Binding BtnResetExp_Click}"
                                Content="RESET EXPORTED INDICATOR"
                                IsEnabled="{Binding IsEditable,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}"
                                Padding="10,3" />

                        <Button Grid.Column="1"
                                Margin="5"
                                Command="{Binding CreditInvoiceOutCommand}"
                                Content="Credit Invoice Out"
                                Padding="10,3"
                                Visibility="Hidden" />
                    </Grid>
                </Grid>
            </telerik:RadTabItem>
        </telerik:RadTabControl>

        <StackPanel Grid.Row="2" Margin="0 10 0 0">
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <StackPanel>
                    <WrapPanel Grid.Row="2"
                               Margin="10,0,0,0"
                               VerticalAlignment="Bottom">
                        <Label Content="Records:" />
                        <Label Content="{Binding Count, Mode=TwoWay}" />
                    </WrapPanel>
                    <WrapPanel>
                        <Button Grid.Column="0"
                                Width="100"
                                Margin="7"
                                Command="{Binding Path=BtnNew_Click}"
                                CommandParameter="{Binding}"
                                Content="NEW"
                                IsEnabled="{Binding EnabledNewUser,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />
                        <Button Grid.Column="1"
                                Width="100"
                                Margin="7"
                                Command="{Binding Path=BtnUpdate_Click}"
                                Content="MODIFY"
                                IsEnabled="{Binding EnabledModifyDelete,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />
                        <Button Grid.Column="2"
                                Width="100"
                                Margin="7"
                                Command="{Binding BtnDelete_Click}"
                                Content="DELETE"
                                IsEnabled="{Binding EnabledModifyDelete,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />
                        <Button Grid.Column="3"
                                Width="100"
                                Margin="7"
                                Command="{Binding BtnPri_Click}"
                                Content="PREVIOUS"
                                IsEnabled="{Binding EnabledPrevNext,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />
                        <Button Grid.Column="4"
                                Width="100"
                                Margin="7"
                                Command="{Binding BtnNext_Click}"
                                Content="NEXT"
                                IsEnabled="{Binding EnabledPrevNext,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />
                        <Button Grid.Column="5"
                                Width="100"
                                Margin="7"
                                Command="{Binding BtnFind_Click}"
                                Content="FIND"
                                IsEnabled="{Binding EnabledFind,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />

                        <Button Grid.Column="6"
                                Width="100"
                                Margin="7"
                                Command="{Binding BtnSave_Click}"
                                Content="{Binding Action,
                                                  Mode=TwoWay,
                                                  FallbackValue=Action,
                                                  UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding EnabledSaveUpdate,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />
                        <Button Grid.Column="7"
                                Width="100"
                                Margin="7"
                                Command="{Binding BtnCancel_Click}"
                                Content="CANCEL"
                                IsEnabled="{Binding EnabledCancel,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />
                    </WrapPanel>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
