                <Button Grid.Row="1"
                        Grid.Column="0"
                        Width="90"
                        Height="30"
                        Margin="15,0,0,0"
                        Command="{Binding Path=BtnBackClick}"
                        Content="Back"
                        Visibility="Hidden" />

                <Label Grid.Row="1"
                       Grid.Column="2"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Content="Customers" />
                <Label Grid.Row="1"
                       Grid.Column="3"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Content="Modules" />
                <Label Grid.Row="1"
                       Grid.Column="6"
                       Margin="0,0,50,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Content="Roles"
                       Visibility="Collapsed" />
                <Label Grid.Row="1"
                       Grid.Column="8"
                       Margin="0,0,50,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Content="Groups"
                       Visibility="Collapsed" />
                <StackPanel Grid.Row="3"
                            Grid.Column="0"
                            Margin="15,0,0,0">
                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="User ID:" />

                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="User Name:" />
                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="Password:" />
                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="First Name:" />
                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="Last Name:" />
                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="Email:" />
                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="EmailChk:"
                           Visibility="Hidden" />
                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="Last Login:" />
                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="Phone:" />
                </StackPanel>
                <StackPanel Grid.Row="3"
                            Grid.Column="1"
                            Width="145"
                            Orientation="Vertical">
                    <Label Height="30"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="{Binding UserID,
                                             Mode=TwoWay,
                                             UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Height="30"
                             Margin="0,10,0,0"
                             VerticalAlignment="Center"
                             IsEnabled="{Binding UserInfoEnabled,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="15"
                             Text="{Binding UserName,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Height="30"
                             Margin="0,10,0,0"
                             VerticalAlignment="Center"
                             IsEnabled="{Binding UserInfoEnabled,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="15"
                             Text="{Binding Password,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Height="30"
                             Margin="0,10,0,0"
                             VerticalAlignment="Center"
                             IsEnabled="{Binding UserInfoEnabled,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="15"
                             Text="{Binding FirstName,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Height="30"
                             Margin="0,10,0,0"
                             VerticalAlignment="Center"
                             IsEnabled="{Binding UserInfoEnabled,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="15"
                             Text="{Binding LastName,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Height="30"
                             Margin="0,10,0,0"
                             VerticalAlignment="Center"
                             IsEnabled="{Binding UserInfoEnabled,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="30"
                             Text="{Binding Email,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox Height="30"
                              Margin="0,10,0,0"
                              Content="Active?"
                              IsChecked="{Binding IsActive,
                                                  Mode=TwoWay,
                                                  UpdateSourceTrigger=PropertyChanged}"
                              IsEnabled="{Binding UserInfoEnabled,
                                                  Mode=TwoWay,
                                                  UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Height="30"
                             Margin="0,10,0,0"
                             VerticalAlignment="Center"
                             IsEnabled="{Binding UserInfoEnabled,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="True"
                             Text="{Binding LastLogin,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Name="txtPhone"
                             Height="30"
                             Margin="0,10,0,0"
                             VerticalAlignment="Center"
                             IsEnabled="{Binding UserInfoEnabled,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"
                             KeyDown="txtPhone_KeyDown"
                             MaxLength="12"
                             Text="{Binding Phone,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <telerik:RadListBox Name="lstboxCustomer"
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    Margin="10,0"
                                    IsSynchronizedWithCurrentItem="True"
                                    ItemsSource="{Binding ListCustomer,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValue="{Binding CustomerID}"
                                    Validation.ErrorTemplate="{x:Null}">
                    <telerik:RadListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox VerticalAlignment="Center"
                                          IsChecked="{Binding IsSelected}"
                                          IsEnabled="{Binding UserInfoEnabled,
                                                              Mode=TwoWay,
                                                              UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding CustomerName}" />
                            </StackPanel>
                        </DataTemplate>
                    </telerik:RadListBox.ItemTemplate>
                </telerik:RadListBox>
                <telerik:RadListBox Name="lstboxModules"
                                    Grid.Row="3"
                                    Grid.Column="3"
                                    Margin="10,0"
                                    IsSynchronizedWithCurrentItem="True"
                                    ItemsSource="{Binding ListModule,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValue="{Binding ModuleID}"
                                    Validation.ErrorTemplate="{x:Null}">
                    <telerik:RadListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Width="30"
                                          VerticalAlignment="Center"
                                          IsChecked="{Binding IsSelected}"
                                          IsEnabled="{Binding UserInfoEnabled,
                                                              Mode=TwoWay,
                                                              UpdateSourceTrigger=PropertyChanged,
                                                              RelativeSource={RelativeSource FindAncestor,
                                                                                             AncestorType={x:Type ListBox}}}" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding ModuleName}" />
                            </StackPanel>
                        </DataTemplate>
                    </telerik:RadListBox.ItemTemplate>
                </telerik:RadListBox>

                <ListBox Name="lstboxRoles"
                         Grid.Row="3"
                         Grid.Column="6"
                         IsSynchronizedWithCurrentItem="True"
                         ItemsSource="{Binding ListRole,
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}"
                         SelectedValue="{Binding RoleID}"
                         Validation.ErrorTemplate="{x:Null}"
                         Visibility="Collapsed">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Width="30"
                                          VerticalAlignment="Center"
                                          IsChecked="{Binding IsSelected}"
                                          IsEnabled="{Binding UserInfoEnabled,
                                                              Mode=TwoWay,
                                                              UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding RoleName}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <telerik:RadListBox Name="lstboxGroups"
                                    Grid.Row="3"
                                    Grid.Column="7"
                                    IsSynchronizedWithCurrentItem="True"
                                    ItemsSource="{Binding ListGroup,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValue="{Binding GroupID}"
                                    Validation.ErrorTemplate="{x:Null}"
                                    Visibility="Collapsed">
                    <telerik:RadListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Width="30"
                                          VerticalAlignment="Center"
                                          IsChecked="{Binding IsSelected}"
                                          IsEnabled="{Binding UserInfoEnabled,
                                                              Mode=TwoWay,
                                                              UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding GroupName}" />
                            </StackPanel>

                        </DataTemplate>
                    </telerik:RadListBox.ItemTemplate>

                </telerik:RadListBox>
                <StackPanel Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="5"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Visibility="{Binding IsButtonPanel,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}">
                    <Button Width="90"
                            Height="30"
                            Margin="0,0,20,0"
                            Command="{Binding Path=BtnSaveClick}"
                            Content="{Binding IsAction,
                                              Mode=TwoWay,
                                              UpdateSourceTrigger=PropertyChanged}" />
                    <Button Width="90"
                            Height="30"
                            Command="{Binding Path=BtnCancelClick}"
                            Content="Cancel" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>-->

