<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Themes/RadListBoxItem.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="telerik:RadListBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="RadListBoxItemCheckBoxStyle"
           BasedOn="{StaticResource {x:Type telerik:RadListBoxItem}}"
           TargetType="{x:Type telerik:RadListBoxItem}">
        <Setter Property="Padding" Value="0" />
    </Style>
</ResourceDictionary>