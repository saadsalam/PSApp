                        <RepeatButton x:Name="PART_UpButton"
                                      MinHeight="{TemplateBinding MinHeight}"
                                      Margin="10,4,10,0"
                                      Command="{x:Static ScrollBar.LineUpCommand}"
                                      Style="{StaticResource ScrollBarButton}">
                            <Path x:Name="ArrowTop"
                                  Data="M 0,4 C0,4 0,6 0,6 0,6 3.5,2.5 3.5,2.5 3.5,2.5 7,6                                          7,6 7,6 7,4 7,4 7,4 3.5,0.5 3.5,0.5 3.5,0.5 0,4 0,4 Z"
                                  Fill="{DynamicResource {x:Static brushes:BrushSet.MarkBrushKey}}"
                                  Stretch="Uniform" />
                        </RepeatButton>
                        <ContentControl x:Name="BackgroundVisual" Grid.Row="1">
                            <Border Margin="10,0" Background="{DynamicResource {x:Static brushes:BrushSet.BackgroundBrushKey}}" />
                        </ContentControl>
                        <Track x:Name="PART_Track"
                               Grid.Row="1"
                               IsDirectionReversed="True"
                               Orientation="Vertical">
                            <Track.Resources>
                                <System:Double x:Key="{x:Static SystemParameters.VerticalScrollBarButtonHeightKey}">130</System:Double>
                            </Track.Resources>
